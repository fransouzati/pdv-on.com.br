{% extends 'base.html.twig' %}

{% block body %}
    <h1>Compra list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantidade</th>
                <th>Preco</th>
                <th>Dtcadastro</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for compra in compras %}
            <tr>
                <td><a href="{{ path('compra_show', { 'id': compra.id }) }}">{{ compra.id }}</a></td>
                <td>{{ compra.quantidade }}</td>
                <td>{{ compra.preco }}</td>
                <td>{% if compra.dtCadastro %}{{ compra.dtCadastro|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('compra_show', { 'id': compra.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('compra_edit', { 'id': compra.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('compra_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
