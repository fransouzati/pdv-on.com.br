{% extends 'base.html.twig' %}

{% block body %}
    <h1>Empresa list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Razaosocial</th>
                <th>Fantasia</th>
                <th>Cnpj</th>
                <th>Ativo</th>
                <th>Cpf</th>
                <th>Dtcadastro</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for empresa in empresas %}
            <tr>
                <td><a href="{{ path('empresa_show', { 'id': empresa.id }) }}">{{ empresa.id }}</a></td>
                <td>{{ empresa.razaoSocial }}</td>
                <td>{{ empresa.fantasia }}</td>
                <td>{{ empresa.cnpj }}</td>
                <td>{{ empresa.ativo }}</td>
                <td>{{ empresa.cpf }}</td>
                <td>{% if empresa.dtCadastro %}{{ empresa.dtCadastro|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('empresa_show', { 'id': empresa.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('empresa_edit', { 'id': empresa.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('empresa_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
