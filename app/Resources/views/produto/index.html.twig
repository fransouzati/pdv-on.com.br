{% extends 'base.html.twig' %}

{% block body %}
    <h1>Produto list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Codigobarra</th>
                <th>Ativo</th>
                <th>Imagem</th>
                <th>Path</th>
                <th>Dtcadastro</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produto in produtos %}
            <tr>
                <td><a href="{{ path('produto_show', { 'id': produto.id }) }}">{{ produto.id }}</a></td>
                <td>{{ produto.nome }}</td>
                <td>{{ produto.codigoBarra }}</td>
                <td>{{ produto.ativo }}</td>
                <td>{{ produto.imagem }}</td>
                <td>{{ produto.path }}</td>
                <td>{% if produto.dtCadastro %}{{ produto.dtCadastro|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('produto_show', { 'id': produto.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('produto_edit', { 'id': produto.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('produto_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
