{% extends 'base.html.twig' %}

{% block body %}
    <h1>Produto</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produto.id }}</td>
            </tr>
            <tr>
                <th>Nome</th>
                <td>{{ produto.nome }}</td>
            </tr>
            <tr>
                <th>Codigobarra</th>
                <td>{{ produto.codigoBarra }}</td>
            </tr>
            <tr>
                <th>Ativo</th>
                <td>{{ produto.ativo }}</td>
            </tr>
            <tr>
                <th>Imagem</th>
                <td>{{ produto.imagem }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ produto.path }}</td>
            </tr>
            <tr>
                <th>Dtcadastro</th>
                <td>{% if produto.dtCadastro %}{{ produto.dtCadastro|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('produto_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('produto_edit', { 'id': produto.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
